.col-xs-12.col-sm-12.col-md-12.col-lg-12
  h4 Generic Info
  h5 Model: 
    strong(ng-bind='collection')
  form(name='modelForm')
    .input-group(ng-class='{ "has-error": modelForm.modelInput.$error.pattern}')
      span.input-group-addon
        a.btn.btn-info
          i.fa.fa-columns
      input.form-control(
        name='modelInput', ng-pattern='/^[A-Za-z]+$/',
        ng-keypress="($event.which === 13)?goToKeyBox():0",
        placeholder='Model name in plural, not "$" char or "system" prefix allowed',
        type='text', ng-model='resource.desc', autofocus='', ng-keyup='colName()')
      span.input-group-addon
        a.btn.btn-primary
          i.fa.fa-list
