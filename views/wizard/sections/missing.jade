.col-xs-12.col-sm-3.col-md-3.col-lg-3
  h4 Missing Forms
  
  table.table
    thead
      tr
        th Model Name
        th Actions
    tbody
      tr(ng-repeat='f in forms.missing')
        td
          .text-center(ng-bind='f')
        td
          a.btn.btn-success(ng-click='genOne(f)')
            i.fa.fa-plus
      tr(ng-show='!forms.missing.length')
        td.text-center(colspan='2')
          span 0 missing forms
    tfoot
      tr(ng-show='forms.missing.length')
        td(colspan='2')
          a.btn.btn-success.col-xs-12.col-sm-12.col-md-12.col-lg-12(ng-click='genAll()')
            i.fa.fa-plus  Add all missing
  
